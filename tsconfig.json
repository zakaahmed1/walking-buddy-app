{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],                     // ðŸ‘ˆ root alias used by "@/components/..."
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"],
      "@services/*": ["src/services/*"],
      "@constants/*": ["constants/*"],    // optional (matches your tree)
      "@hooks/*": ["hooks/*"]             // optional
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
